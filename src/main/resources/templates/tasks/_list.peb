{# Task list partial - used by both full page and HTMX updates #}

{% if tasks is not empty %}
    <ul id="task-list" class="task-list">
        {% for task in tasks %}
            {% include "tasks/_item.peb" %}
        {% endfor %}
    </ul>
{% else %}
    <div id="task-list">
        <p><em>No tasks{% if query %} matching "{{ query }}"{% endif %}.</em></p>
    </div>
{% endif %}
